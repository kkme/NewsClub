<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_header" >

        <ImageButton
            android:id="@+id/btn_nav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_nav" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_nav"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="头条"
            android:textColor="@color/banner.header_text"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/btn_header_right_0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_settings" />

        
        <ImageButton
            android:id="@+id/btn_header_right_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_header_right_0"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_download" />
        
         <ImageButton
            android:id="@+id/btn_header_right_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_header_right_1"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_add" />
        
        
        <ProgressBar
            android:id="@+id/header_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/btn_header_right_1"
            android:layout_alignRight="@id/btn_header_right_1"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:visibility="gone" />
    </RelativeLayout>

</merge>